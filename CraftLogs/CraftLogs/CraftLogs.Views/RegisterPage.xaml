<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CraftLogs.Views.RegisterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:values="clr-namespace:CraftLogs.Values;assembly=CraftLogs.Values"
    xmlns:views="clr-namespace:CraftLogs.Views;assembly=CraftLogs.Views"
    x:Name="view"
    Title="{Binding Title}"
    BackgroundColor="{StaticResource BackgroundColorLight}"
    IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
    <ContentPage.ToolbarItems>
        <views:BindableToolbarItem
            Command="{Binding CancelCommand}"
            Text="{x:Static values:Texts.Cancel}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                VerticalOptions="Center">
                <Label
                    Margin="5,0,0,0"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="StartAndExpand"
                    Text="{x:Static values:Texts.TeamRegisterName}"
                    TextColor="Black" />

                <Entry
                    Style="{StaticResource RegisterEntry}"
                    Text="{Binding Name, Mode=TwoWay}" />

                <Label
                    Margin="5,0,0,0"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Text="{x:Static values:Texts.TeamHouse}"
                    TextColor="Black" />

                <Picker
                    FontSize="16"
                    ItemsSource="{Binding Houses}"
                    SelectedItem="{Binding House, Mode=TwoWay}"
                    TextColor="{StaticResource ColorDark}" />

                <Label
                    Margin="5,0,0,0"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="{x:Static values:Texts.TeamClass}"
                    TextColor="Black" />

                <Picker
                    FontSize="16"
                    ItemsSource="{Binding Classes}"
                    SelectedItem="{Binding Cast, Mode=TwoWay}"
                    TextColor="{StaticResource ColorDark}" />

                <StackLayout
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal"
                    VerticalOptions="FillAndExpand">

                    <Image
                        x:Name="Image1"
                        FlowDirection="LeftToRight"
                        HeightRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        Source="{Binding Img1}"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="100">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding SelectCommand}"
                                CommandParameter="1" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        x:Name="Image2"
                        FlowDirection="LeftToRight"
                        HeightRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        Source="{Binding Img2}"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="100">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding SelectCommand}"
                                CommandParameter="2" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        x:Name="Image3"
                        FlowDirection="LeftToRight"
                        HeightRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        Source="{Binding Img3}"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="100">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding SelectCommand}"
                                CommandParameter="3" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>

                <Label
                    Margin="10,0,10,0"
                    FontAttributes="Italic"
                    FontSize="15"
                    HorizontalOptions="StartAndExpand"
                    Text=""
                    TextColor="Black"
                    VerticalOptions="StartAndExpand">
                    <Label.FormattedText>
                        Mage: 1 Stamina == 4 HP. +2 ATK
                        Warrior: 1 Stamina == 6 HP. +2 DEF
                        Rogue: 1 Stamina == 5 HP. +2 Dodge Ã©s CritR
                    </Label.FormattedText>
                </Label>

                <Button
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource WhiteButton}"
                    Text="{x:Static values:Texts.Save}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>