<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CraftLogs.Views.ProfilePage"
             xmlns:values="clr-namespace:CraftLogs.Values;assembly=CraftLogs.Values"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="-QR olvasás-"  Style="{StaticResource WhiteButton}" Command="{Binding NavigateToQRScannerPageCommand}"/>
            <Button Text="{x:Static values:Texts.InventoryPage}"  Style="{StaticResource WhiteButton}" IsEnabled="False"/>
            <Button Text="{x:Static values:Texts.LogsPage}" Command="{Binding NavigateToLogsCommand}" Style="{StaticResource WhiteButton}" />
            <Button Text="{x:Static values:Texts.TradePage}"  Style="{StaticResource WhiteButton}" IsEnabled="False"/>
            <Image  Source="@drawable/ic_settings.png" 
                    HeightRequest="60" 
                    WidthRequest="60" 
                    HorizontalOptions="EndAndExpand" 
                    VerticalOptions="CenterAndExpand" 
                    Margin="0,0,20,0" 
                    BackgroundColor="{StaticResource BackgroundColorLight}"
                    FlowDirection="LeftToRight">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Settings_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>